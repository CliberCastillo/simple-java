pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/CliberCastillo/simple-java.git'
            }
        }
        stage('list') {
            steps {
                sh '''
                    ls
                    cd ..
                    ls
                '''
            }
        }
        stage('build') {
            steps {
                sh 'docker run --rm -v $PWD:/app -w /app maven:3.8.4 mvn clean install'
            }
        }
        stage('list-build') {
            steps {
                sh 'ls'
            }
        }
        stage('Containers'){
            steps {
                sh 'docker ps'
            }
        }
    }
}
