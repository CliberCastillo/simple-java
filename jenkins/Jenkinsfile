
pipeline {
    agent {
        docker {
            image 'maven:3-jdk-8'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stage('Clone') {
        steps {
            git 'https://github.com/CliberCastillo/simple-java.git'
        }
    }
    stage('list') {
        steps {
            sh 'ls'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }
    stage('lists') {
        steps {
            sh 'ls'
        }
    }
}