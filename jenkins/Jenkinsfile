
pipeline {
    agent {
        docker {
            image 'maven:3-openjdk-11'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/CliberCastillo/simple-java.git'
            }
        }
        stage('list') {
            steps {
                sh 'ls'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('DockerBuild') {
            steps {
                sh '''
                    docker build -t clibercastillo/simple-java:latest .
                    docker image ls
                    '''
            }
        }
    }
}