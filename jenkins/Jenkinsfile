
pipeline {
    agent none

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3-openjdk-11'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                git 'https://github.com/CliberCastillo/simple-java.git'
                sh 'mvn clean install'
            }
        }
        stage('Run') {
            agent any
            steps {
                sh 'docker ps'
            }
        }
    }
}